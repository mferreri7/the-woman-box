          <li><i class="fab fa-gratipay"></i></i>Ahorra <strong>5% mensual</strong></li>
        </ul>
        <%= link_to "Arma tu box", new_order_path(plan_type: "3Meses"), class: "bundle-card-button banner-call-to-actions"  %>
      </div>
    </div>
    <div class="col-xs-12 col-sm-6 col-lg-3">
      <div class="bundle-card" data-billing-type="6Meses">
        <h4 class="bundle-card-title">Paquete de 6 Meses</h4>
        <hr class="bundle-card-divider">
        <h4 class="text-center bundle-card-price"><strong> <i>$188,500 COP</i></strong></h4>
        <p class="text-center bundle-card-price-type">Pago único*</p>
        <hr class="bundle-card-divider">
        <ul class="bundle-card-list">
          <li><i class="fab fa-gratipay"></i></i>Envío gratis</li>
          <li><i class="fab fa-gratipay"></i></i>Solo un pago</li>
          <li><i class="fab fa-gratipay"></i></i>Ahorra <strong>10% mensual</strong></li>
        </ul>
        <%= link_to "Arma tu box", new_order_path(plan_type: "6Meses"), class: "bundle-card-button banner-call-to-actions"  %>
      </div>
    </div>
  </div>
</div>
</div>
