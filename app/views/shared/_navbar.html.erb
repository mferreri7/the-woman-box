<div class="navbar-wagon">
  <%= link_to root_path, class: "navbar-wagon-brand" do %>
    <%= image_tag "logo.png", height: 200 %>
  <% end %>
  <% if user_signed_in? %>
    <div class="navbar-wagon-right hidden-xs hidden-sm">
      <%= link_to "¡Refiere y Gana!", referral_program_path, class: "navbar-wagon-item navbar-wagon-link link-bold link-underline" %>
      <%= link_to user_path(current_user), class: "navbar-wagon-item navbar-wagon-link" do %>
        <i class="fas fa-user"></i>
        Mi Cuenta
      <% end %>
      <%= link_to destroy_user_session_path, class: "navbar-wagon-item navbar-wagon-link", method: :delete do %>
        <i class="fas fa-sign-out-alt"></i>
        <%= t(".sign_out", default: "Cerrar Sesión") %>
      <% end %>
    </div>
    <div class="navbar-wagon-item hidden-md hidden-lg">
      <div class="dropdown">
        <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
        <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
          <li>
            <%= link_to user_path(current_user), class: "navbar-wagon-item navbar-wagon-link" do %>
              <i class="fas fa-user"></i>
              Mi Cuenta
            <% end %>
          </li>
          <li>
            <%= link_to destroy_user_session_path, class: "navbar-wagon-item navbar-wagon-link", method: :delete do %>
              <i class="fas fa-sign-out-alt"></i>
              <%= t(".sign_out", default: "Cerrar Sesión") %>
            <% end %>
          </li>
        </ul>
      </div>
    </div>
  <% else %>
    <div class="navbar-wagon-right hidden-xs hidden-sm">
      <%= link_to t(".sign_in", default: "Iniciar Sesión"), new_user_session_path, class: "navbar-wagon-link" %>
    </div>
    <div class="navbar-wagon-item hidden-md hidden-lg">
      <%= link_to t(".sign_in", default: "Iniciar Sesión"), new_user_session_path, class: "navbar-wagon-link" %>
    </div>
  <% end %>
</div>


